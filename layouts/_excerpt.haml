.excerpt
  - url = "#{route_path(item)}"
  %h2
    %img{:src => "assets/images/icons/#{item[:image]}"}
    %a(href="#{url}" title="Full article" class="permalink")
      = "#{item[:title]}"
  %p
    = item[:excerpt] || "Missing excerpt metadata for <code>#{item[:file].path}</code>"
  = render('_meta', :item => item)
    
